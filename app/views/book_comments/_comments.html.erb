<table>
  <% book.book_comments.each do |comment| %>
    <tr>
      <td>
        <%= image_tag comment.user.profile_image,size: '100x100' %><br>
        <%= comment.user.name %>
      </td>
      <td><%= comment.comment %></td>
      <td>
        <% if comment.user == current_user %>
          <%= link_to '削除',book_book_comment_path(book, comment), method: :delete, remote: true, class: 'btn btn-danger' %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
