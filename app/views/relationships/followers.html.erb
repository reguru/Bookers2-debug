<h1>Follower Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |follower| %>
    <tr>
      <td><%= image_tag follower.get_profile_image, size: '50x50' %></td>
      <td><%= follower.name %></td>
      <td>フォロー数:<%= follower.followings.count %></td>
      <td>フォロワー数:<%= follower.followers.count %></td>
      <td><%= link_to "show", user_path(follower) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
