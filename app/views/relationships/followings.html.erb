<h1>Follow Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |follow| %>
    <tr>
      <td><%= image_tag follow.get_profile_image, size: '50x50' %></td>
      <td><%= follow.name %></td>
      <td>フォロー数:<%= follow.followings.count %></td>
      <td>フォロワー数:<%= follow.followers.count %></td>
      <td><%= link_to "show", user_path(follow) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
